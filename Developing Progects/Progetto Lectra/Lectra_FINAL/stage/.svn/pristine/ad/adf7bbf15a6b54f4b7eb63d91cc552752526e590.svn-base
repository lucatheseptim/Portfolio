.container_scelte{
    display: flex;
    justify-content: center;
    position: relative;
    bottom: 4rem;
}

.container_scelte_dietro{
    display: flex;
    justify-content: center;
    position: relative;
    bottom: 4rem;
}

#scelta_tasche{
    position: relative;
    bottom: 3.5rem;
}
h1#scelta_manica {
    position: relative;
    bottom: 3.5rem;
}

.carousel-inner {
    position: absolute;
    width: 50%;
    height: 380px;
    overflow: hidden;
    top: -7rem;
    left: 13rem;
}
h1#dietro {
    transform: translateY(-30px);
    width: 151px;
    margin: 8px auto;
}

h3#davanti, 
h3#dietro,
h3#manica_polsi,
h3#tasche_pattine,
h3#collo_scelta_camicia {
    position: relative;
    bottom: 3rem;
    font-size: 30px;
    right: 20rem;
}

.text_carousel{ 
    font-size: 16px; 
    position: relative;
    top: 19px;
} 

.scelte_checkbox_tasche input:checked ~ .check_text,
.scelte_checkbox_maniche input:checked ~ .check_text
{
    background-color: #fff;
    border: 1px solid #023047;
    color: #023047;
    transition: 1s ease; 
}




.scelte_checkbox_tasche input,
.scelte_checkbox_maniche input
{
    visibility: hidden;
}




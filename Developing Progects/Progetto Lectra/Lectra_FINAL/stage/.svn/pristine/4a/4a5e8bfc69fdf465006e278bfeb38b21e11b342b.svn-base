    width: 198px;
    height: initial;
}
.save_materiale{
    border: 2px solid #fff;
    width: 7.5rem;
    height: 1.7rem;
    text-align: center;
    margin: 0 auto;
    cursor: pointer;
    font-weight: bolder;
    border-radius: 10px;
    font-size: 12px;
}
span.text_save {
    position: relative;
    top: 5px;
} 

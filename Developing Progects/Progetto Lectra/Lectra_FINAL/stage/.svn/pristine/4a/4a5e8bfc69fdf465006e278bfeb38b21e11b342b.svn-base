
.container-riepilogo{
    margin: 50px auto;
    position: relative;
    top: -50px;
}

#riepilogo-conferma-ordine{
    padding: 10px;
    background-color: #023047;
    color: #fff;
    width:170px;
    font-weight: bolder;
    margin: -15px auto;
    cursor: pointer;
}
#conferma-spedizione-ordine{
    padding: 15px;
    background-color: #023047;
    color: #fff;
    width: 170px;
    font-weight: bolder;
    cursor: pointer;
    text-transform: uppercase;
    position: relative;
    bottom: 60px;
    left: 3px;
}

#aggiungi-nuova-camicia,
#nuova-cliente-camicia{
    padding: 5px;
    background-color: #023047;
    color: #fff;
    width: 230px;
    font-weight: bolder;
    margin: 0px 4px;
    cursor: pointer;
} 

/*dimensione dell'icone trash*/
i#modifica,
i#elimina,
i#duplica{
    font-size: 30px;
    width:30px;
    cursor: pointer; 
}

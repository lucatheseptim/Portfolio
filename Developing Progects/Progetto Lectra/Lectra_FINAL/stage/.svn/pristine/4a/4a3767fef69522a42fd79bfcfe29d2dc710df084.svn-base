#create-account{
    padding: 15px;
    background-color: #023047;
    color: white;
    width: 150px;
    font-weight: bolder;
    cursor: pointer;
    margin: 50px auto;
    text-transform: uppercase;
}
.email#Email{
    border: 3px solid #023047;
    background: white;
    width: 400px;
    height: 60px;
}
#errorValidation .error{
    color: red;
    font-size: 1rem;
    display: block;
    margin-top: 5px;
}
.checkbox{
    cursor: pointer;
    background: #eee;
    width: 50px;
    height: 20px;
    visibility: hidden;
  
}
.checkbox:checked ~ .label_checkbox{
   /*  border: 1px solid transparent; */
    color: #fff;
    background-color: #023047;
    font-weight: bolder;
}
.label_checkbox{
    border: 5px solid #023047 ;
    padding: 5px;
    min-width: 200px;
}
#utente{
    margin: 0px auto;
    text-align: center;
    padding: 0;
    padding-bottom: 0;
    height: 450px;
}
div#cliente_esistente {
    position: relative;
    top: 27px;
}
.check_cliente {
    text-align: center;
    padding: 10px;
    display: flex;
    justify-content: center;
}
 /*=====new client======*/
.nuovo_cliente input:not([type="radio"]):not([type="submit"]):not([type="checkbox"]){
    border: 3px solid #023047;
    background: white;
    width: 300px;
    height: 35px;
}

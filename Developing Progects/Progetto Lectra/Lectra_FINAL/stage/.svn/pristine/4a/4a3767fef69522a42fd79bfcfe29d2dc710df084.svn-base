.new_account input#create-account{
    padding: 15px;
    background-color: #023047;
    color: white;
    width: 170px;
    font-weight: bolder;
    cursor: pointer;
    margin: 100px auto;
}
.nuovo_cliente {
    display: grid;
    grid-template-columns: 1fr 1fr; 
   /* grid-template-columns: repeat(auto-fill, minmax(15rem, 1fr)); */
    grid-gap: 10px;
    position: relative;
    bottom: 30px;
}
.consenso_cliente {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0px;
    font-size: 14px;
}
.check{
    position: relative;
    top: 14px;
    left: 205px;
    cursor: pointer;
    background: #eee;
    width: 50px;
    height: 13px;
    margin: -5px;
}
.nuovo_cliente label{
    float: left;
    position: relative;
    left: 75px;
}
div#indietro-create-account {
    position: relative;
    bottom: 52px;
}
